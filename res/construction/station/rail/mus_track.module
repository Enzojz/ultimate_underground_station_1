local trackWidth = 5

function data()
    return {
        availability = {
            yearFrom = 0,
            yearTo = 0,
        },
        buildMode = "SINGLE",
        cost = {
            price = 15000,
        },
        description = {
            name = _("Underground station track"),
            description = _("An underground station track"),
            icon = "ui/construction/street/underpass_entry.tga"
        },
        category = {
            categories = {"track"},
        },
        type = "mus_track",
        order = {
            value = 260,
        },
        metadata = {
            track = true,
            width = 5
        },
        
        updateFn = function(result, transform, tag, slotId, addModelFn, params)
            local allArcs = mus.trackArcs(trackWidth)(result.config, result.arcs[slotId])
            local refArc = pipe.new * allArcs[1]()()() * pipe.map(mus.arc2Edges) * pipe.flatten() * pipe.map(pipe.map(coor.vec2Tuple))
            local edges = {
                type = "TRACK",
                alignTerrain = false,
                params = {
                    type = "high_speed.lua",
                    catenary = true,
                },
                edgeType = "TUNNEL",
                edgeTypeName = "ust_void.lua",
                edges = refArc,
                snapNodes = {5, 11},
                tag2nodes = {},
            }
            
            local newModels = mus.trackModels(result.config, allArcs, mus.fitModel)
            result.terminalInfo[slotId] = true
            result.models =
                pipe.new
                * result.models
                + newModels
            
            result.edgeLists = pipe.new
                * result.edgeLists
                / edges
                
        end,
        
        getModelsFn = function(params)
            return {}
        end
    }

end
